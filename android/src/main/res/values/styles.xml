<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentInactive">@color/colorAccentInactive</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="Widget" />

    <style name="Widget.RecyclerView" />

    <style name="Widget.RecyclerView.GroupItems">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">@integer/radioItemsCount</item>
    </style>

    <style name="Widget.Home" />

    <style name="Widget.Home.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/defaultMargin</item>
        <item name="android:layout_marginTop">@dimen/defaultMargin</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="Widget.Home.CircleIndicator">
        <item name="android:layout_width">@dimen/indicatorSize</item>
        <item name="android:layout_height">@dimen/indicatorSize</item>
        <item name="srcCompat">@drawable/sh_indicator</item>
    </style>

    <style name="Widget.Player.Buttons" parent="">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.Player.Buttons.Secondary" parent="Widget.Player.Buttons">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>


    <style name="Widget.Shadow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/bg_shadow_bottom</item>
    </style>

    <style name="ShapeAppearanceOverlay.PodcastDetails.HeaderBackground" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/podcastDetailsHeaderCornerSize</item>
    </style>

</resources>
