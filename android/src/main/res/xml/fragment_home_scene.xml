<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/searchButton"
            android:layout_width="@dimen/searchIconSize"
            android:layout_height="@dimen/searchIconSize"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:alpha="0.2"
            android:translationX="16dp"
            motion:layout_constraintBottom_toBottomOf="@+id/titleView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/titleView" />

        <Constraint
            android:id="@+id/titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:alpha="0.2"
            android:translationX="-40dp"
            motion:layout_constraintEnd_toStartOf="@+id/searchButton"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/searchButton"
            android:layout_width="@dimen/searchIconSize"
            android:layout_height="@dimen/searchIconSize"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            motion:layout_constraintBottom_toBottomOf="@+id/titleView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/titleView" />

        <Constraint
            android:id="@+id/titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintEnd_toStartOf="@+id/searchButton"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="@android:integer/config_longAnimTime" />


</MotionScene>